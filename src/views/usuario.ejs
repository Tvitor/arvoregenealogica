<%- include('includes/head') %>
<%- include('includes/nav') %>


  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>

      <div class="col-lg-8 my-3">
        <h1 class="text-center">Cadastro de Usuario</h1>
        <p class="text-center lead">Entre com os seus dados</p>

        <%- include('includes/messages') %>

        <% if(usuario._id) { %>
          <form action="/usuario/edit/<%= usuario._id %>" method="POST">
        <% } else { %>
          <form action="/usuario/register" method="POST">
        <% } %>
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          <div class="form-group">
            <label>Nome</label>
            <input value="<%= usuario.nome %>" type="text" class="form-control" name="nome">            
          </div>

          <div class="form-group">
            <label>Sobrenome</label>
            <input value="<%= usuario.sobrenome %>" type="text" class="form-control" name="sobrenome">            
          </div>

          <div class="form-group">
            <label>E-mail</label>
            <input value="<%= usuario.email %>"type="email" class="form-control" name="email">            
          </div>

          <div class="form-group">
            <label>Telefone</label>
            <input value="<%= usuario.telefone %>"type="tel" class="form-control" name="telefone">            
          </div>
             
          <div class="form-group">
            <label>Naturalidade</label>
            <input value="<%= usuario.naturalidade %>"type="text" class="form-control" name="naturalidade">            
          </div>

          <div class="form-group">
            <label>nacionalidade</label>
            <input value="<%= usuario.nacionalidade %>"type="text" class="form-control" name="nacionalidade">            
          </div>

          <div class="form-group">
            <label>Cidade de Residencia</label>
            <input value="<%= usuario.cidadeResidencia %>"type="tel" class="form-control" name="cidadeResidencia">            
          </div>

          <div class="form-group">
            <label>Data de Nascimento</label>
            <input value="<%= usuario.dataNascimento %>"type="text" class="form-control" name="dataNascimento">            
          </div>

          <div class="form-group">
            <label>Nome do Conjuge Atual</label>
            <input value="<%= usuario.nomeConjugeAtual %>"type="nomeConjugeAtual" class="form-control" name="nomeConjugeAtual">            
          </div>

          <div class="form-group">
            <label>Sobrenome do Conjuge Atual</label>
            <input value="<%= usuario.sobreNomeConjugeAtual %>"type="tel" class="form-control" name="sobreNomeConjugeAtual">            
          </div>

          <button type="submit" class="btn btn-primary">Salvar</button>
        </form>

      </div>

      <div class="col-lg-2"></div>
    </div>
  </div>

<%- include('includes/footer') %>

